@model HOSPITALMANAGEMENTSYSTEM.Models.Login

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>DoctorLogin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</head>
<body>
    <div style="width:100%;color:darkblue;font-weight:bold">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid" style="margin-right:100px;width:100%">
                <a class="navbar-brand" href="#">RAJAGIRI REGIONAL HOSPITAL</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="nav justify-content-center navbar-nav me-auto mb-2 mb-lg-2  ">
                        <li class="nav-item" style="margin-left: 800px">

                            @Html.ActionLink("HOME", "Home", "HomePage", new { @class = "nav-link active" })
                        </li>
                    </ul>

                </div>
            </div>

        </nav>
    </div>
    @using (Html.BeginForm("DoctorLogin", "HomePage", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <h1 style="text-align:center;margin-top:20px;">LOGIN</h1>

        <hr />
        <div class="container-fluid">

            <div class="col-md-4" style="margin-left:450px;">
                <div class="form-horizontal">

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        <b>USER NAME</b>
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <br />
                    <div class="form-group">
                        <b>PASSWORD</b>
                        <div class="col-md-12">
                            @Html.PasswordFor(model => model.Password, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <br />

                    <br />
                    <div class="form-group">
                        <div class="col-md-offset-12 col-md-10">
                            <p style="color: red; margin-left: 120px">@ViewBag.info</p>
                            <input type="submit" value="Login" class="btn btn-dark" style="width:200px;margin-left:120px" />
                        </div>
                    </div>
                </div>
            </div>

        </div>

    }
</body>
</html>
